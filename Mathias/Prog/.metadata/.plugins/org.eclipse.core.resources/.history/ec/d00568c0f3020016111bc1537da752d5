package Aufgabe8;

public class test {

	public static void main(String[] args) {
		System.out.println(count("halloe;test;;ei,,nszwei;"));

	}
	public static int count(String txt){
		int n = 0;
		int x=-1;
		do{
			x++;
			x = txt.indexOf(';', x);
			n++;
		} while (x>0);
		do{
			x++;
			x = txt.indexOf(',', x);
			n++;
		} while (x>0);
		return n;
		
	}

}
